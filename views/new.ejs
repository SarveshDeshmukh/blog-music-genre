<% include ./partials/header %>
<div class="ui main container segment">
    <div class="ui huge header">New Genre</div>
    <form class="ui form" action ="/genres" method = "POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name= "genre[title]" placeholder ="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name= "genre[image]" placeholder ="image url">
        </div>
        <div class="field">
            <label>Video</label>
            <input type="text" name= "genre[video]" placeholder ="video url">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="genre[body]"></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
