<% include ./partials/header %>
<div class="ui main container segment">
    <div class="ui huge header">Edit <%=foundGenre.title%></div>
    <form class="ui form" action ="/genres/<%=foundGenre._id%>?_method=PUT" method = "POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name= "genre[title]" value ="<%=foundGenre.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name= "genre[image]" value ="<%=foundGenre.image%>">
        </div>
        <div class="field">
            <label>Video</label>
            <input type="text" name= "genre[video]" value ="<%=foundGenre.video%>">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="genre[body]"><%=foundGenre.body%></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>